{
 "manifest_version": 2,
 "name": "Persistent Shopping Bag",
 "version": "1.0",


 "content_scripts": [
   {
    "matches": ["<all_urls>"],
    "css": ["style.css"],
    "js": ["content.js"]
    }
  ],

  "browser_action": {
        "default_title": "Shopping Ba",
        "default_popup": "popup.html"
      },


  "background": {
       "scripts": ["background.js"],
       "persistent": false
  },

  "permissions": [
     "tabs", "storage"
   ]


}
